# Wanankucha API - Environment Variables
# Copy this file to .env and fill in your values
# These override appsettings.json values

# Database Connection
ConnectionStrings__PostgreSQL=Host=localhost;Port=5432;Database=WanankuchaDB;Username=postgres;Password=YOUR_PASSWORD;Timeout=10

# JWT Token Configuration
Token__SecurityKey=YOUR_64_CHARACTER_MINIMUM_SECRET_KEY_HERE
Token__Issuer=Iss
Token__Audience=Aud
Token__Expiration=15

# SMTP Email Configuration (for Gmail, use App Password)
Smtp__Host=smtp.gmail.com
Smtp__Port=587
Smtp__Username=your-email@gmail.com
Smtp__Password=your-app-password
Smtp__FromEmail=noreply@yourapp.com
Smtp__FromName=Wanankucha
Smtp__EnableSsl=true
Smtp__WebAppBaseUrl=https://your-production-domain.com

# ASP.NET Core Environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Production
