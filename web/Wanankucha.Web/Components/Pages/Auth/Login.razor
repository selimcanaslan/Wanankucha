@page "/login"
@layout AuthLayout
@attribute [AllowAnonymous]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

@if (isInitializing)
{
    <div class="page-loading">
        <div class="loading-spinner-large"></div>
    </div>
}
else
{
    <div class="login-card">
        <div class="card-header">
            <h1 class="title">Welcome Back</h1>
            <p class="subtitle">Sign in to continue to Wanankucha</p>
        </div>
        
        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin" class="login-form">
            <DataAnnotationsValidator />
            
            <div class="form-group">
                <label for="email" class="form-label">Email or Username</label>
                <div class="input-wrapper">
                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                        <circle cx="12" cy="7" r="4"/>
                    </svg>
                    <InputText id="email" @bind-Value="loginModel.EmailOrUserName" 
                               class="form-input" placeholder="Enter your email or username" 
                               disabled="@isLoading" />
                </div>
            </div>
            
            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <div class="input-wrapper">
                    <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                    </svg>
                    <InputText id="password" @bind-Value="loginModel.Password" 
                               type="password" class="form-input" placeholder="Enter your password"
                               disabled="@isLoading" />
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-message">
                    <svg class="error-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="12" y1="8" x2="12" y2="12"/>
                        <line x1="12" y1="16" x2="12.01" y2="16"/>
                    </svg>
                    <span>@errorMessage</span>
                </div>
            }
            
            <button type="submit" class="submit-btn" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner"></span>
                    <span>Signing in...</span>
                }
                else
                {
                    <span>Sign In</span>
                    <svg class="btn-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="5" y1="12" x2="19" y2="12"/>
                        <polyline points="12 5 19 12 12 19"/>
                    </svg>
                }
            </button>
        </EditForm>
        
        <div class="card-footer">
            <p class="footer-text">Don't have an account? <a href="/register" class="footer-link">Sign up</a></p>
        </div>
    </div>
}

@code {
    private LoginRequest loginModel = new();
    private bool isLoading = false;
    private bool isInitializing = true;
    private string? errorMessage;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Check if already authenticated
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (authState.User.Identity?.IsAuthenticated == true)
            {
                Navigation.NavigateTo("/", forceLoad: false);
                return;
            }
            
            isInitializing = false;
            StateHasChanged();
        }
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            var result = await AuthService.LoginAsync(loginModel);

            if (result.Succeeded)
            {
                ((Wanankucha.Web.Auth.JwtAuthenticationStateProvider)AuthStateProvider).NotifyAuthenticationStateChanged();
                Navigation.NavigateTo("/", forceLoad: false);
            }
            else
            {
                errorMessage = result.Message ?? "Login failed. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred. Please try again.";
            Console.WriteLine($"Login error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}

