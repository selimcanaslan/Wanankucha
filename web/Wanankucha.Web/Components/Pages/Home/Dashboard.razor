@page "/"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Dashboard - Wanankucha</PageTitle>

<div class="dashboard">
    <div class="welcome-section">
        <h1 class="welcome-title">Welcome to Wanankucha</h1>
        <AuthorizeView>
            <Authorized>
                <p class="welcome-subtitle">Hello, <strong>@context.User.Identity?.Name</strong>! You are successfully authenticated.</p>
            </Authorized>
        </AuthorizeView>
    </div>
    
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon purple">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
